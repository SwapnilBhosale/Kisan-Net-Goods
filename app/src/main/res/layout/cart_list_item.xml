<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:id="@+id/cartItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/cart_image"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textColor="#ff000000"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="" />


                <TextView
                    android:id="@+id/close_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/cross_symbol_318_69557"
                    android:clickable="true"
                    android:onClick="closeButtonClicked" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:paddingRight="20dp"
                android:layout_gravity="right"
                android:gravity="left"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="right"
                        android:textColor="#000000"
                        android:text="@string/product_price"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:drawablePadding="-5dp"
                        android:drawableLeft="@drawable/rupi1"
                        android:gravity="right"
                        android:text="2563"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textColor="#000000"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:text="@string/product_quantity"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/decrement_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="-"
                        android:background="@drawable/circle_backgound"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/product_quntity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:textColor="#000000"
                        android:text="2563"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/increment_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:background="@drawable/circle_backgound"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="#2FAA96"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="15sp"

                        />
                </LinearLayout>

                <View
                    android:layout_width="160dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="right"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="right"
                        android:text="@string/final_price"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/final_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:drawablePadding="-5dp"
                        android:drawableLeft="@drawable/rupi1"
                        android:gravity="right"
                        android:text="2563"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="@string/product_weight"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/product_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>